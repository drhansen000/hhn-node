<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="shortcut icon" />
    <link rel="stylesheet" href="navbar.css" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-dark fixed-top">
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#collapsibleNavbar">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="collapsibleNavbar">
            <ul class="navbar-nav">
                <img class="navbar-brand" alt="HH&N Logo" src="images/green-black-logo.png" />
                <li class="nav-item ">
                    <a class="nav-link" href="/services">Services</a>
                </li>
                <div class="btn-group">
                    <li class="nav-item ">
                        <a class="nav-link" href="/products">Products</a>
                        <a class="btn dropdown-toggle dropdown-toggle-split" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <span class="sr-only">Toggle Dropdown</span>
                        </a>
                        <div class="dropdown-menu">
                            <a class="dropdown-item" href="/products#TeaTree">Tea Tree</a>
                            <a class="dropdown-item" href="/products#MarulaOil">Marula Oil</a>
                            <a class="dropdown-item" href="/products#Awapuhi">Awapuhi</a>
                            <a class="dropdown-item" href="/products#Original">Original</a>
                            <a class="dropdown-item" href="/products#Strength">Strength</a>
                            <a class="dropdown-item" href="/products#ColorCare">Color Care</a>
                            <a class="dropdown-item" href="/products#Moisture">Moisture</a>
                            <a class="dropdown-item" href="/products#Kids">Kids</a>
                            <a class="dropdown-item" href="/products#Curls">Curls</a>
                            <a class="dropdown-item" href="/products#NeuroLiquid">Neuro Liquid</a>
                            <a class="dropdown-item" href="/products#Invisiblewear">Invisiblewear</a>
                            <a class="dropdown-item" href="/products#Neon">Neon</a>
                            <a class="dropdown-item" href="/products#Smoothing">Smoothing</a>
                            <a class="dropdown-item" href="/products#Extra-Body">Extra-Body</a>
                            <a class="dropdown-item" href="/products#Mitch">Mitch</a>
                            <div class="dropdown-divider"></div>
                        </div>
                    </li>
                </div>
                <li class="nav-item ">
                    <a class="nav-link" href="/purchases">Purchases</a>
                </li>
                <li class="nav-item ">
                    <a class="nav-link" href="/appointments">Appointments</a>
                </li>
            </ul>
        </div>
        <div>
            <ul class="nav navbar-nav navbar-right">
                <li id="loginBtn" class="nav-item">
                    {{#if loggedIn}}
                    <a class="nav-link" href="/logout-query">Logout</a>
                    {{else}}
                    <a class="nav-link" href="/login">Login</a>
                    {{/if}}

                </li>
                <li class="nav-item ">
                    <a id="number-in-cart" class="nav-link" href="/cart"
                       value="0">
                        0 In Cart
                    </a>
                </li>

            </ul>
        </div>
    </nav>
</body>
</html>

<script>
    window.onload = function itemsInCart() {
        if (sessionStorage.getItem('cart')) {
            var cartObject = JSON.parse(sessionStorage.getItem('cart'));
            document.getElementById('number-in-cart').innerHTML = `${cartObject.length} In Cart`;
        }
    }
</script>